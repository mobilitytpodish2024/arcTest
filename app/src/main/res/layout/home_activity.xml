<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primaryColor2"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCAN AND SAVE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_toolbar"
        >




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"

        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_scan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/cylindrical_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_scan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@+id/btn_scan"
                app:layout_constraintEnd_toEndOf="@+id/btn_scan"
                app:layout_constraintTop_toBottomOf="@+id/btn_scan"
                app:layout_constraintBottom_toBottomOf="@+id/btn_scan">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.43">

                </androidx.constraintlayout.widget.Guideline>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    android:layout_centerVertical="true"
                    android:background="@drawable/barcode_code_qr_scan_scanner_icon"
                    ></ImageView>
                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCAN BARCODE"
                    app:layout_constraintStart_toEndOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    >

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/scan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCAN DATA:"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btn_scan"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            >

        </TextView>
        <TextView
            android:id="@+id/scan_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/scan_title"
            app:layout_constraintBottom_toBottomOf="@+id/scan_title"
            app:layout_constraintStart_toEndOf="@+id/scan_title"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            >

        </TextView>
        <TextView
            android:id="@+id/tv_not_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTIFICATION NO."
            app:layout_constraintTop_toBottomOf="@+id/scan_title"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/et_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_not_no"
            app:layout_constraintStart_toStartOf="@+id/tv_not_no"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/rectangular_shape"
            android:layout_marginStart="@dimen/_20sdp"
            android:hint="Notification No."
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:visibility="gone"
            android:paddingTop="@dimen/_8sdp"
            android:imeOptions="actionDone"
            android:paddingBottom="@dimen/_8sdp"
            >

        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@+id/et_notification"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="#50C878"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:visibility="gone"
            android:text="Validate"
            android:layout_marginTop="@dimen/_5sdp"
            >

        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/vieew1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#999999"
        app:layout_constraintTop_toBottomOf="@+id/cl_tre"
        android:layout_marginTop="@dimen/_20sdp"
        >

    </View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_imgg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/vieew1"
        android:layout_marginTop="@dimen/_20sdp"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <TextView
                android:id="@+id/tv_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Capture Image"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                >

            </TextView>

            <ImageView
                android:id="@+id/iv_image_cap"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:src="@drawable/dotted_rectangle"
                app:layout_constraintTop_toBottomOf="@+id/tv_capture"
                app:layout_constraintStart_toStartOf="parent"

                />

            <ImageView
                android:id="@+id/iv_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_cloud_upload_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/cylindrical_primary"
        app:layout_constraintTop_toBottomOf="@+id/cl_imgg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Submit"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        >


    </Button>

